<script>
$(function(){
	$('.btn_sub').click(function(){
		$(this).after('<img src="/images/loading02.gif">');
		$('.btn_sub').attr('disabled','true');
		var tData = $('#myform').serialize();		
		$.post('/cfos_wallet/sendaddressadd?wallet=<?=$tWallet?>',tData , function(obj){
			var obj = eval('('+obj+')');		
			if(obj.status == 1){
				js_alert(obj.msg , '/cfos_wallet/sendaddress?wallet=<?=$tWallet?>');
			}else{
				js_alert(obj.msg);
				$('.btn_sub').next('img').remove();
			}
			$('.btn_sub').removeAttr('disabled');
		});
	});
})
function js_alert(msg,url){

	 Boxy.ask(msg, ["<?=$lang->common->yes?>"], function(val) { 
		if(url != null){
			location.href=url;	
		} 
	}, {title: "<?=$lang->main->message?>"});
}
</script>

